{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite-plugin-svgr/client", "node"],
        "declaration": false,
        "emitDeclarationOnly": false,
        "noEmit": true
    },
    "include": ["src", "svg.d.ts", "scripts/**/*"],
    "exclude": ["src/**/*"],
    "files": [],
    "references": [
        { "path": "./tsconfig.app.json" },
        { "path": "./tsconfig.node.json" }
    ]
}
